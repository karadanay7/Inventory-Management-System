@using WebUI.Components.Layout.Sidebar
@using WebUI.Components.Layout.NavigationBar

@inherits LayoutComponentBase

<div class="flex h-screen">
    <!-- Drawer for mobile and desktop views -->
    <div class="drawer lg:drawer-open">
        <input id="my-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
            <!-- Page content -->
            <label for="my-drawer" class="btn btn-primary drawer-button lg:hidden">
                Open Drawer
            </label>
            <div class="flex-1">
                @Body
            </div>
        </div>
        <div class="drawer-side">
            <label for="my-drawer" class="drawer-overlay"></label>
            <div class="bg-base-200 p-4 w-80">
                <!-- Sidebar content -->
                <Content />
            </div>
        </div>
    </div>
</div>
